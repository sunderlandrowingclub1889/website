#sections
  margin-top: -60px
  z-index: 1
  display: flex
  flex-direction: column
  align-items: center
  gap: 60px
  margin-bottom: 120px

.section
  position: relative
  background-color: var(--background-color)
  width: @css{min(calc(100% - 120px), 1460px)}
  min-width: 660px
  padding: 10px 120px 60px 60px
  margin-left: 20px
  margin-right: 100px
  border-radius: 4px
  box-shadow: 0 4px 16px var(--shadow-light)
  box-sizing: border-box

  .short-section
    margin-bottom: -30px
  
  .shorter-section
    margin-bottom: -70px

    p
      margin-bottom: 30px
  
  .long-section
    margin-bottom: 50px

  &>.scroll-stop:first-child
    position: absolute
    top: calc(-1 * var(--nav-bar-height) - 30px )

  &.row>:first-child
    flex: 1

  h1
    font-size: 2.5em

  p
    font-size: 1.25em
    
    a
      color: var(--white)
    
  li 
    font-size: 1.25em
    
  #twitter-feed
    margin-top: 1.675em
    margin-right: -180px
    margin-left: 80px

  .twitter-timeline > iframe
      width: 450px !important

  a.twitter-timeline
    display: block
    width: 450px !important
    height: 400px !important
    background-color: var(--white)
    border-radius: 12px
    padding: 20px
    box-sizing: border-box

  .section-attachments
    display: flex
    flex-direction: column
    align-items: stretch
    gap: 10px
    margin-top: 1.675em
    margin-right: -180px
    margin-left: 80px
    
    .attachment
      background-color: var(--base-color)
      border: 2px solid var(--white)
      color: var(--white)
      padding: 12px 18px
      border-radius: 4px
      width: 260px

      .coachInfo
        display: flex
        flex-direction: column
        align-items: center
        text-align: center

        img 
          border: 2px solid var(--white)
          border-radius: 4px
      
      h2
        margin-top: 0
        margin-bottom: 0.5em
      
      h3
        margin-top: -0.5em
        margin-bottom: -0.1em

      ul
        margin-top: 0.5em
        font-size: 1em
        list-style: none
        margin-left: -40px
        
      .attachment-button
        display: flex
        align-items: center
        text-decoration: none
        color: var(--black)
        gap: 10px
        padding: 12px 18px
        margin: 0 -18px
        
        &>.icon>svg
          display: block
          width: 24px
          height: 24px
          fill: currentcolor
        
        &:hover
          color: var(--white)
          background-color: var(--secondary-background-color)
    
    .plan
      border: 2px solid var(--white)
      overflow: hidden
      min-width: 300px
      box-sizing: border-box
      text-decoration: none
      background-color: var(--background-color)
      color: var(--white)

      .row
        justify-content: space-around
        gap: 30px

      .plan-name
        font-size: 1.2em
        font-weight: bold
        white-space: nowrap
        display: flex
        justify-content: space-between
        align-items: center
        background-color: var(--base-color)
        border-bottom: 2px solid var(--white)
        margin: -12px -18px 0
        padding: 4px 8px
        
        &>:not(:first-child)
          font-size: 0.8em

      .plan-price
        display: flex
        flex-direction: column
        align-items: center
        text-align: center

      .plan-price-value
        font-size: 1.5em
        font-weight: 600

      .plan-price-per::before
        content: '/ '
        white-space: nowrap

    a.plan:hover
      background-color: #e9f8ff

  .sub-section
    display: flex
    align-items: flex-start
    justify-content: space-between
    margin-top: 1.675em
    
    &>.section-content>:first-child
      margin-top: 0
    
    &>.section-attachments
      margin-right: -180px

#header
  display: flex
  align-items: center
  justify-content: center
  background-position: 50% 50%
  background-size: cover
  background-repeat: no-repeat
  padding: 0 0 50px
  font-size: 30px
  box-sizing: border-box
  min-height: 720px
  
  &>h1
    display: block
    text-align: center
    width: @css{min(calc(100% - 300px), 1460px)}
    filter: drop-shadow(0 1px 2px var(--shadow-dark)) drop-shadow(0 0.1em 0.1em var(--shadow-light))

.section h1
  margin-bottom: 0.5em

.section.no-padding
  padding: 0
    
  &>iframe
    display: block
    width: 100%

@media screen and (max-width: 1200px)
  .section
    min-width: 0
    margin: 0
    padding: 10px 20px 40px 20px
    width: @css{min(calc(100% - 40px), 1460px)}
    font-size: 0.8em
  
    &.row
      flex-direction: column

  &>.section-attachments
    &:not(.important)
      display: none

    &.important
      margin: 10px 0 0px
  
  &>.sub-section
    flex-direction: column
    justify-content: flex-start

    &>.section-attachments
      &:not(.important)
        display: none

      &.important
        margin: 20px 0 0

    &:last-child>.section-attachments.important
      margin-bottom: -40px

  #header>h1
    width: auto
