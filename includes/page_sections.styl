#sections
  margin-top: -60px
  z-index: 1
  display: flex
  flex-direction: column
  align-items: center
  gap: 60px
  margin-bottom: 120px

.section
  position: relative
  background-color: var(--background-color)
  width: @css{min(calc(100% - 120px), 1460px)}
  min-width: 660px
  padding: 20px 120px 60px 60px
  margin-left: 20px
  margin-right: 100px
  border-radius: 4px
  box-shadow: 0 4px 16px #0004
  box-sizing: border-box

  &>.scroll-stop:first-child
    position: absolute
    top: calc(-1 * var(--nav-bar-height) - 30px)

  &.row>:first-child
    flex: 1

  h1
    font-size: 2.5em

  p
    font-size: 1.25em
    
    a
      color: #fff
    
  li 
    font-size: 1.25em
    
  #twitter-feed
    margin-top: 1.675em
    margin-right: -180px
    margin-left: 80px

  .twitter-timeline > iframe
      width: 450px !important

  a.twitter-timeline
    display: block
    width: 450px !important
    height: 400px !important
    background-color: #fff
    border-radius: 12px
    padding: 20px
    box-sizing: border-box

  &>.section-attachments
    display: flex
    flex-direction: column
    align-items: stretch
    gap: 10px
    margin-top: 1.675em
    margin-right: -180px
    margin-left: 80px
    
    .attachment
      background-color: #fff
      color: #000
      padding: 12px 18px
      border-radius: 4px
      
      h2
        margin-top: 0
        margin-bottom: 0.5em
      
      ul
        margin-top: 0.5em
        font-size: 20px
        
      .attachment-button
        display: flex
        align-items: center
        text-decoration: none
        color: #000
        gap: 10px
        padding: 12px 18px
        margin: 0 -18px
        
        &>.icon>svg
          display: block
          width: 24px
          height: 24px
          fill: currentcolor
        
        &:hover
          color: #fff
          background-color: #68BBE3
    
    .plan
      overflow: hidden
      min-width: 300px
      box-sizing: border-box
      text-decoration: none

      .row
        justify-content: space-around
        gap: 30px

      .plan-name
        font-size: 1.2em
        white-space: nowrap
        display: flex
        justify-content: space-between
        align-items: center
        background-color: var(--secondary-background-color)
        margin: -12px -18px 0
        padding: 4px 8px
        color: #fff
        text-shadow: 1px 1px 1px #000
        
        &>:not(:first-child)
          font-size: 0.8em

      .plan-price
        display: flex
        flex-direction: column
        align-items: center

      .plan-price-value
        font-size: 2em

      .plan-price-per::before
        content: '/ '

    a.plan:hover
      background-color: #e9f8ff

  .sub-section
    display: flex
    align-items: flex-start
    justify-content: space-between
    margin-top: 1.675em
    
    &>.section-content>:first-child
      margin-top: 0
    
    &>.section-attachments
      margin-right: -180px

#header
  display: flex
  align-items: center
  justify-content: center
  height: 300px
  background-position: 50% 50%
  background-size: cover
  padding: 0 0 50px
  font-size: 30px
  box-sizing: border-box
  
  &>h1
    display: block
    width: @css{min(calc(100% - 300px), 1460px)}
    filter: drop-shadow(0 1px 2px #0008) drop-shadow(0 0.1em 0.1em #0004)

.section h1
  margin-bottom: 0.5em

@media screen and (max-width: 1000px)
  .section
    min-width: 0
    margin: 0
    padding: 20px 20px 60px 20px
    width: @css{min(calc(100% - 40px), 1460px)}
    font-size: 0.8em
  
    &.row
      flex-direction: column

  &>.section-attachments
    &:not(.important)
      display: none

    &.important
      margin: 40px 0 -40px
  
  &>.sub-section
    flex-direction: column
    justify-content: flex-start

    &>.section-attachments
      &:not(.important)
        display: none

      &.important
        margin: 20px 0 0

    &:last-child>.section-attachments.important
      margin-bottom: -40px

  #header>h1
    width: auto
