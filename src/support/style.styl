@import '/includes/global.styl'
@import '/includes/page_sections.styl'

.email
  gap: 8px
  margin-bottom: 20px
  margin-top: 20px
  text-decoration: none
  font-size: 1em
  color: #fff
  padding: 5px
  background-color: var(--background-color)
  border-radius: 4px
  display: flex
  align-items: center

  &:hover
    background-color: var(--secondary-background-color)
  
  @media screen and (max-width: 1000px)
    
    .icon>svg
      width: 1px
      height: 1px
      display: block
      fill: #fff

  .icon>svg
    width: 24px
    height: 24px
    display: block
    fill: #fff

.section-content
  display: flex
  flex-direction: column
  flex: 1
  min-width: 300px

  &>p
    margin-bottom: 0

  &>a
    max-width: 600px
    border: 5px solid #fff
    border-radius: 4px
    box-sizing: border-box
    align-self: center
    margin-top: 16px

    &:focus-visible
      outline: thick solid #000

    &:hover
      border: 5px solid var(--secondary-background-color)

    &>img
      width: 100%
      display: block

.section-attachments
  min-width: 400px
  margin-left: 30px
  flex-direction: row !important 
  align-self: center
  
  @media screen and (max-width: 1000px)
    max-width: @css{min(400px, calc(100vw - 100px))}
    min-width: @css{min(400px, calc(100vw - 100px))}
    
  &>a:not(.plan.attachment)
    display: block
    max-width: 400px
    background-color: #fff
    border: 8px solid #fff
    border-radius: 4px
    cursor: pointer
    text-decoration: none
    
    @media screen and (max-width: 1000px)
      max-width: @css{min(400px, calc(100vw - 100px))}
      min-width: @css{min(400px, calc(100vw - 100px))}

    &>img
      display: block
      background-color: #fff

  .attachment
    padding: 12px !important
    
.link-button
  background-color: #fff
  color: #000
  border-radius: 4px
  padding: 12px 18px
  font-weight: bold;
  text-decoration: none
  &:hover
    background-color: var(--secondary-background-color)

.crowdfunding
  gap: 10px
  padding: 20px
  flex-wrap: wrap
      
.section-tile
  display: flex
  flex-direction: column
  flex: 1
  min-width: 300px
  
  h3
    margin-bottom: 0

  p
    margin-top: 0.5em
    font-size: 1em
  
  &>a
    max-width: 600px
    border: 5px solid #fff 
    border-radius: 4px
    box-sizing: border-box
    align-self: center

    &:focus-visible
      outline: thick solid #000

    &:hover
      border: 5px solid var(--secondary-background-color)

    &>img
      width: 100%
      display: block

#sponsors
  display: grid
  padding: 20px
  gap: 10px
  grid-template-columns: @css{repeat(auto-fill, minmax(min(400px, 100%), 1fr))}
  justify-items: center
  
  &>a
    display: block
    max-width: @css{min(400px, 100%)}
    border: 8px solid #fff
    border-radius: 4px
    cursor: pointer
    background-color: #fff

    &>img
      display: block
      width: 100%

#easyfundraising-info
  color: white
  font-weight: normal
  text-align: left
  margin-bottom: 0px
  margin-top: 16px
  font-size: 1.25em
