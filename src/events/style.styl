@import '/includes/global.styl'

.link-button
  background-color: #fff
  color: #000
  border-radius: 4px
  padding: 12px 18px
  text-decoration: none

#info
  margin: 0 30px
  
#info-section
  display: flex
  align-items: stretch
  flex-wrap: wrap
  gap: 20px 60px
  margin-bottom: 60px
  
  &>:first-child
    flex: 1 1 480px
    
    &>:not(h1)
      margin-left: 30px

#upcoming-events
  display: flex
  flex-direction: column
  align-items: flex-start
  gap: 20px
  padding-left: 30px
  
.event-button
  display: block
  color: #fff
  text-decoration: none
  border-radius: 4px
  background-color: var(--background-color)
  padding: 10px 60px 10px 20px
  min-width: 400px
  
  &>.event-button-name
    font-size: 2em

#calendar
  margin: -10px 30px 60px

@keyframes fadeIn
  from
    opacity: 0
  to
    opacity: 1
