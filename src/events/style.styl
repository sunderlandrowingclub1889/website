@import '/includes/global.styl'
@import '/includes/page_sections.styl'

#header
  h1
    filter: drop-shadow(0 1px 2px rgba(0,0,0,.533)) drop-shadow(0 .1em .1em rgba(0,0,0,.267))

.link-button
  background-color: var(--base-color)
  color: var(--white)
  border: 2px solid var(--white)
  box-shadow: 0 4px 8px 0 rgba(0,0,0,0.2)
  border-radius: 4px
  padding: 12px 18px
  font-weight: bold;
  text-decoration: none
  &:hover
    background-color: var(--intermediate-color)
    border: 2px solid var(--white)
    color: var(--white)

#upcoming-events
  display: flex
  flex-direction: column
  align-items: stretch
  gap: 20px
  padding-left: 30px
  margin-top: 40px
  
  @media screen and (max-width: 1000px)
    padding-left: 0
  
.event-button
  display: block
  color:  var(--white)
  text-decoration: none
  border-radius: 4px
  background-color:  var(--base-color)
  box-shadow: 0 4px 8px 0 rgba(0,0,0,0.2)
  padding: 10px 60px 15px 20px
  min-width: 400px
  border: 2px solid var(--base-color)

  &:hover
    background-color: var(--intermediate-color)
    border: 2px solid var(--white)

  .event-button-name
    font-size: 1.25em
    font-weight: bold

  .event-button-date
    font-size: 1em
  
  .event-button-description
    font-size: 1em

  .click-for-more
    font-size: 0.75em
    
  @media screen and (max-width: 1000px)
    max-width: calc(100vw - 160px)
    min-width: calc(100vw - 220px)
    // margin-right: 20px
    
    &>.event-button-name
      font-size: 1.5em
    
    &>.event-button-date
      font-size: 1em

// #calendar
//   margin: -10px 30px 60px

iframe
  margin-bottom: 60px

@keyframes fadeIn
  from
    opacity: 0
  to
    opacity: 1

.header-button
  @extend .link-button
  position: relative
  box-shadow: 0 0.1em 0.2em var(--shadow-dark)
  background-color: var(--background-color)
  color: var(--white)
  text-shadow: 0 1px 3px var(--shadow-dark)
  font-size: 1.2em
  cursor: pointer

  &::before
    content: ''
    position: absolute
    left: -4px
    top: -4px
    width: calc(100% + 8px)
    height: calc(100% + 8px)
    box-sizing: border-box
    border: 2px solid var(--white)
    border-radius: 8px
