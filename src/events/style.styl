@import '/includes/global.styl'

.link-button
  background-color: #fff
  color: #000
  border-radius: 4px
  padding: 12px 18px
  text-decoration: none
  &:hover
    background-color: var(--secondary-background-color)

#info
  margin: 0 30px
  &>iframe
    margin-top: 20px
    border-radius: 4px
  
#info-section
  display: flex
  align-items: stretch
  flex-wrap: wrap
  gap: 20px 60px
  margin-bottom: 60px
  
  &>:first-child
    flex: 1 1 480px
    
    &>:not(h1)
      margin-left: 30px

#upcoming-events
  display: flex
  flex-direction: column
  align-items: stretch
  gap: 20px
  padding-left: 30px
  
  @media screen and (max-width: 1000px)
    padding-left: 0
  
.event-button
  display: block
  color: #fff
  text-decoration: none
  border-radius: 4px
  background-color: var(--background-color)
  padding: 10px 60px 10px 20px
  min-width: 400px
  
  &>.event-button-name
    font-size: 2em
    
  @media screen and (max-width: 1000px)
    max-width: calc(100vw - 160px)
    min-width: calc(100vw - 160px)
    // margin-right: 20px
    
    &>.event-button-name
      font-size: 1.5em

#calendar
  margin: -10px 30px 60px

@keyframes fadeIn
  from
    opacity: 0
  to
    opacity: 1
