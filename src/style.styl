@import '/includes/global.styl'

.link-button
  background-color: #fff
  color: #000
  border-radius: 4px
  padding: 12px 18px
  text-decoration: none

#home-header
  background-image: linear-gradient(to top, var(--base-color), transparent 100px), url('/assets/header_background.webp')
  background-size: cover
  background-position: 50% 0%
  width: 100%
  height: calc(100vh - var(--nav-bar-height) - 30px)
  min-height: 720px
  overflow: hidden

#home-header-text
  display: flex
  flex-direction: column
  justify-content: center
  margin-left: 10vw
  max-width: 550px
  text-align: center
  height: 100%

  .row
    margin-top: 3em
    gap: 16px
    justify-content: center

  .header-button
    @extend .link-button
    position: relative
    box-shadow: 0 0.1em 0.2em #0008
    background-color: var(--background-color)
    color: #fff
    text-shadow: 0 1px 3px #0008
    font-size: 1.2em
    cursor: pointer

    &::before
      content: ''
      position: absolute
      left: -4px
      top: -4px
      width: calc(100% + 8px)
      height: calc(100% + 8px)
      box-sizing: border-box
      border: 2px solid #fff
      border-radius: 8px

#home-logo>svg
  margin-top: -80px
  fill: #fff
  height: @css{min(480px, calc(100vh - var(--nav-bar-height) - 30px))}
  min-height: 300px
  filter: drop-shadow(0 1px 2px #0008) drop-shadow(0 0.1em 0.1em #0004)

@import '/includes/page_sections.styl'

#tide-widget-script+div
  width: 100%

.tides-widget__container
  color: #000
  border-radius: 4px !important
  width: calc(100% + 60px)
  max-width: unset !important
  padding: 0 !important
  border: none !important

  caption
    font-style: normal !important
    font-size: 0.9em
    padding: 8px 8px 0
    margin-bottom: 0 !important
    color: #fff !important
    text-shadow: 1px 1px 1px #000
    cursor: default
    user-select: none

  table
    th
      border-color: var(--background-color) !important
      border: none !important
      color: #fff
      text-shadow: 1px 1px 1px #000

    td
      border-bottom: none !important
      text-transform: capitalize
      background-color: #fff

    tr:last-child>td
      &:first-child, &:last-child
        border-bottom-left-radius: 4px
        border-bottom-right-radius: 4px

  .tides-widget__tables
    gap: 10px

  .tides-widget__table-container
    margin: 0 !important
    background: linear-gradient(var(--secondary-background-color) 50%, #fff 50%)
    border-radius: 4px

.tides-widget__copyright
  &>:first-child
    display: none

  &>:nth-child(2)
    margin: 0
    padding: 4px 8px
    font-size: 0.8em
    margin: 60px -120px -80px -60px
    cursor: default
    user-select: none
    opacity: 0.7
    white-space: pre-wrap
    max-width: calc(100% + 60px)

    &::before
      content: 'Tide times '

    &::before, small, small>a
      color: #fff !important
      font-size: 1em !important
      white-space: pre-wrap

    small>a
      cursor: pointer

      &::after
        display: none

@media screen and (max-width: 1000px)
  .section
    #twitter-feed
      display: none

  .tides-widget__container
    width: 100%

  .tides-widget__tables
    margin: 0 !important

  .tides-widget__copyright>:nth-child(2)
    margin: 60px -20px -80px -20px
